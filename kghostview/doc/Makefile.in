HELPFILES = index.html index-1.html index-2.html \
			index-3.html index-4.html index-5.html \
			index-6.html

DOCSDIR = @prefix@/share/doc/HTML/en/kghostview
INSTALL_DIR = @INSTALL@ -d -m 0755
INSTALL_DATA = @INSTALL@ -m 644

all:

Makefile: Makefile.in
	cd ../.. && CONFIG_FILES=kghostview/doc/$@ CONFIG_HEADERS= $(SHELL) ./config.status

install:
	$(INSTALL_DIR) $(DOCSDIR)
	@for i in $(HELPFILES); do \
	 echo "$(INSTALL_DATA) $$i $(DOCSDIR)"; \
	 $(INSTALL_DATA) "$$i" $(DOCSDIR); \
	done

uninstall:
	for i in $(HELPFILES); do \
	 rm -f $(DOCSDIR)/"$$i"; \
	done
