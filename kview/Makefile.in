
##
## Makefile for the KView image viewer 
##
## $Id$

CXX = @CXX@
MOC= @MOC@
topdir = @topdir@

INCLUDE= @all_includes@ -I.. 
LDFLAGS= @all_libraries@ -lkfm -lkdeui -lkdecore -lqt -lX11 -lXext -lgif @LIBJPEG@ @LIBSOCKET@ 
CXXFLAGS= @CXXFLAGS@ -DHAVE_CONFIG_H

# Define if you have libpng.
# Part of libgr
LIBPNG= -DHAVE_LIBPNG
LLIBPNG= -lpng -lz

# uncomment this if you like to use the unsecure filename changer
#LINEEDIT =-DLINEEDIT 

########
#  Install locations
#

prefix  = @prefix@
BINPATH = $(prefix)/bin/
LNKPATH = $(prefix)/share/applnk/Utilities

# needs to be changed if you make srcdoc (requires DOC++)

# SRCDOCPATH = /home/ssk/web/kdesrc/kview

###### No need to edit below this line #############3

FORMATSRC= jpeg.cpp gif.cpp kpng.cpp eps.cpp netpbm.cpp
FORMATOBJ= jpeg.o gif.o kpng.o eps.o netpbm.o

######

OBJS = main.o wview.o viewport.o formats.o QwViewport.o kerror.o fileman.o confighandler.o $(FORMATOBJ)
SOURCE = main.cpp wview.cpp viewport.cpp formats.cpp QwViewport.cpp \
	 kerror.cpp fileman.cpp confighandler.cpp  $(FORMATSRC)
SRCDOCFILES = wview.h viewport.h kerror.h

all: kview

%.o: %.cpp
	$(CXX) $(CXXFLAGS) $(LINEEDIT) $(FORMATS) $(INCLUDE) -c -o $@ $<

%.moc: %.h
	$(MOC) $< -o $@

kview: $(OBJS)
	$(CXX) -o $@ $(OBJS) $(FORMATLIBS) $(LDFLAGS)

main.o: main.cpp wview.moc
wview.o: wview.cpp wview.moc viewport.h fileman.moc
fileman.o: fileman.cpp fileman.h fileman.moc wview.h 
viewport.o: viewport.cpp viewport.moc
kerror.o: kerror.cpp kerror.moc
QwViewport.cpp: QwViewport.moc

formats.o: formats.cpp
jpeg.o: jpeg.cpp
gif.o: gif.cpp
kpng.o: kpng.cpp
confighandler.o: confighandler.h confighandler.cpp

Makefile: Makefile.in
	cd .. && CONFIG_FILES=kview/$@ CONFIG_HEADERS= $(SHELL) ./config.status

clean::
	-rm -f kview $(OBJS) *.moc

install: kview
	@INSTALL@ -m 755 kview $(BINPATH)
	@INSTALL@ -d -m 755 $(LNKPATH)
	@INSTALL@ -m 644 kview.kdelnk $(LNKPATH)/KView.kdelnk
	(cd doc && $(MAKE) install)

uninstall:
	rm -f $(BINPATH)/kview
	rm -f $(LNKPATH)/kview.kdelnk
	(cd doc && $(MAKE) uninstall)

srcdoc:	
	cd doc; doc++ -j -H -d $(SRCDOCPATH) ../wview.h ../viewport.h \
	../kerror.h

release:
	cp *.cpp *.h Makefile kview-src/
	tar zcvf kview-src.tar.gz kview-src

dep:
	makedepend $(INCLUDE) -I /usr/include/linux/ $(SOURCE) >& /dev/null

backup:
	(cd .. ; tar zcvf kview-project.tgz kview)
	mv ../kview-project.tgz /mount/lan/PROJBAK 

